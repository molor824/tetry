	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'tetry'",
			"cargo": {
				"args": [
					"build",
					"--bin=tetry",
					"--package=tetry",
					"--features=bevy/dynamic_linking"
				],
				"filter": {
					"name": "tetry",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}",
			"env": {
				"CARGO_MANIFEST_DIR": "${workspaceFolder}",
				"PATH": "${env:USERPROFILE}/.rustup/toolchains/stable-x86_64-pc-windows-msvc/bin;${workspaceFolder}/target/debug/deps;${env:PATH}",
			},
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'tetry'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=tetry",
					"--package=tetry"
				],
				"filter": {
					"name": "tetry",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}